{
  "extends": ["tslint:recommended", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": ["node_modules/**/*.ts"]
  },
  "rules": {
    "interface-name": false,
    "trailing-comma": false,
    "ordered-imports": false,
    "whitespace": [
      true,
      "check-branch",
      "check-operator",
      "check-typecast",
      "check-decl",
      "check-separator",
      "check-preblock",
      "check-rest-spread"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ],
    "object-literal-sort-keys": false,
    "forin": false
  }
}
